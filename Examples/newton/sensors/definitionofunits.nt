#
#	Description: Invariants for a system instrumented with sensors.
#

time : signal =
{
	name = "second" English;
	symbol = "s";
	derivation = none;
}

distance : signal =
{
	name = "meter" English;
	symbol = "m";
	derivation = none;
}

temperature : signal =
{
	name = "Kelvin" English;
	symbol = "K";
	derivation = none;
}

mass : signal =
{
	name = "kilogram" English;
	symbol = "kg";
	derivation = none;
}

charge : signal =
{
	name = "Coulomb" English;
	symbol = "C";
	derivation = none;
}

acceleration : signal =
{
	name = "meter per second squared" English;
	symbol = "g";
	derivation = distance / (time ** 2);
}

angle : signal =
{
	name = "degree" English;
	symbol = "deg";
	derivation = distance / distance;
}


angular velocity : signal =
{
	name = "degree per second" English;
	symbol = "o";
	derivation = angle / time;
}

frequency : signal =
{
	name = "Hertz" English;
	symbol = "Hz";
	derivation = 1 / time;
}

noise : signal =
{
	name = "micro g per square root of Hertz" English;
	symbol = "n";
	derivation = (10 ** -6) * acceleration / (frequency ** 0.5);
}

magnetic flux density : signal =
{
	name = "Tesla" English;
	symbol = "T";
	derivation = mass / (charge * time);
}

micro magnetic flux density : signal =
{
	name = "micro Tesla" English;
	symbol = "b";
	derivation = (10 ** -6) * magnetic flux density;
}
