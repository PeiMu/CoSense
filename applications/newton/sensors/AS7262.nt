#
#	Description: Base signals used in most Newton descriptions.
#
include "NewtonBaseSignals.nt"

#
#	Description: Additional signals used in this particular newton description.
#

power : signal =
{
	name = "Watts" English;
	symbol = "W";
	derivation = work / time;

irradianceResponsivity : signal =
{
	name = "counts per micro watts per square centimetres" English;
	symbol = "c";
	derivation = (10 ** 10) / (power * area);
}

#
#	Newton Description for the device AS7262 starts here.
#
#	Figures quoted here are referenced from AMS AS7262 Device data sheet (Mar 2017).
#
#	The constant is a value which can never be generated by the device. We use that to denote “impossible” or “invalid” readings.
#
kAS7262TemperatureErasureToken: const = 16rFEFE;
kAS7262Lambda450VErasureToken: const = 16rFEFE;
kAS7262Lambda500BErasureToken: const = 16rFEFE;
kAS7262Lambda550GErasureToken: const = 16rFEFE;
kAS7262Lambda570YErasureToken: const = 16rFEFE;
kAS7262Lambda600OErasureToken: const = 16rFEFE;
kAS7262Lambda650RErasureToken: const = 16rFEFE;

#
#	Standard Deviation is not available in data sheet.
#
kAS7262TemperatureStdev: const = ;
kAS7262Lambda450VStdev: const = ;
kAS7262Lambda500BStdev: const = ;
kAS7262Lambda550GStdev: const = ;
kAS7262Lambda570YStdev: const = ;
kAS7262Lambda600OStdev: const = ;
kAS7262Lambda650RStdev: const = ;


AS7262: device (
			Temp: temperature
			Lambda450V: irradianceResponsivity@0,
			Lambda500B: irradianceResponsivity@1,
			Lambda550G: irradianceResponsivity@2,
			Lambda570Y: irradianceResponsivity@3,
			Lambda600O: irradianceResponsivity@4,
			Lambda650R: irradianceResponsivity@5
		)
{

	#
	#	The full range of the device
	#
	#	Range of Temperature can be found in Figure 6 of Electrical Characteristics on page 6.
	#
	range Temperature == [233.15*K .. 358.15*K],
	
	#
	#	Range of irradiance can be found in Figure 12 of Optical Characteristics on page 11.
	#
	range Lambda450V == [0*c .. 45*c],
	range Lambda500B == [0*c .. 45*c],
	range Lambda550G == [0*c .. 45*c],
	range Lambda570Y == [0*c .. 45*c],
	range Lambda600O == [0*c .. 45*c],
	range Lambda650R == [0*c .. 45*c],

	#
	#	The operation sequence needed to get a sample
	#
	#	i2c address of device can be found in Figure 18 of I2C Feature List on page 18.
	#
	#	Register address of temperature sensor can be found in Figure 20 of I2C Virtual Register Set on page 22.
	#
	interface Temperature == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get Temp data...
		#
		Temperature = read 16r06;
	},
	
	interface Temperature == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get Temp data...
		#
		Temperature = read 16r06;
	},
	
	#
	#	Register address of channel data can be found in Figure 20 of I2C Virtual Register Set on page 22.
	#
	interface Lambda450V@16*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda450V data...
		#
		V_High = read 16r08;
		V_Low = read 16r09;
		Lambda450V@16*bits = (V_High << 8) | (V_Low);
	},

	interface Lambda450V@16*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda450V data...
		#
		V_High = read 16r08;
		V_Low = read 16r09;
		Lambda450V@16*bits = (V_High << 8) | (V_Low);
	},

	interface Lambda450V@32*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda450V data...
		#
		V_Cal_High = read 16r14;
		V_Cal_Xhigh = read 16r15;
		V_Cal_Low = read 16r16;
		V_Cal_Xlow = read 16r17;
		Lambda450V@32*bits = (V_Cal_High << 24) |(V_Cal_Xhigh << 16) |(V_Cal_Low << 8) | (V_Cal_Xlow);
	},

	interface Lambda450V@32*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda450V data...
		#
		V_Cal_High = read 16r14;
		V_Cal_Xhigh = read 16r15;
		V_Cal_Low = read 16r16;
		V_Cal_Xlow = read 16r17;
		Lambda450V@32*bits = (V_Cal_High << 24) |(V_Cal_Xhigh << 16) |(V_Cal_Low << 8) | (V_Cal_Xlow);
	},
	
	interface Lambda500B@16*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda500B data...
		#
		B_High = read 16r0A;
		B_Low = read 16r0B;
		Lambda500B@16*bits = (B_High << 8) | (B_Low);
	},

	interface Lambda500B@16*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda500B data...
		#
		B_High = read 16r0A;
		B_Low = read 16r0B;
		Lambda500B@16*bits = (B_High << 8) | (B_Low);
	},

	interface Lambda500B@32*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda500B data...
		#
		B_Cal_High = read 16r18;
		B_Cal_Xhigh = read 16r19;
		B_Cal_Low = read 16r1A;
		B_Cal_Xlow = read 16r1B;
		Lambda500B@32*bits = (B_Cal_High << 24) |(B_Cal_Xhigh << 16) |(B_Cal_Low << 8) | (B_Cal_Xlow);
	},

	interface Lambda500B@32*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda500B data...
		#
		B_Cal_High = read 16r18;
		B_Cal_Xhigh = read 16r19;
		B_Cal_Low = read 16r1A;
		B_Cal_Xlow = read 16r1B;
		Lambda500B@32*bits = (B_Cal_High << 24) |(B_Cal_Xhigh << 16) |(B_Cal_Low << 8) | (B_Cal_Xlow);
	},

	interface Lambda550G@16*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda550G data...
		#
		G_High = read 16r0C;
		G_Low = read 16r0D;
		Lambda550G@16*bits = (G_High << 8) | (G_Low);
	},
	
	interface Lambda550G@16*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda550G data...
		#
		G_High = read 16r0C;
		G_Low = read 16r0D;
		Lambda550G@16*bits = (G_High << 8) | (G_Low);
	},
	
	interface Lambda550G@32*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda550G data...
		#
		G_Cal_High = read 16r1C;
		G_Cal_Xhigh = read 16r1D;
		G_Cal_Low = read 16r1E;
		G_Cal_Xlow = read 16r1F;
		Lambda550G@32*bits = (G_Cal_High << 24) |(G_Cal_Xhigh << 16) |(G_Cal_Low << 8) | (G_Cal_Xlow);
	},

	interface Lambda550G@32*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda550G data...
		#
		G_Cal_High = read 16r1C;
		G_Cal_Xhigh = read 16r1D;
		G_Cal_Low = read 16r1E;
		G_Cal_Xlow = read 16r1F;
		Lambda550G@32*bits = (G_Cal_High << 24) |(G_Cal_Xhigh << 16) |(G_Cal_Low << 8) | (G_Cal_Xlow);
	},

	interface Lambda570Y@16*bits == "i2c" (address: "16r49")
	{
		#		
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda570Y data...
		#
		Y_High = read 16r0E;
		Y_Low = read 16r0F;
		Lambda570Y@16*bits = (Y_High << 8) | (Y_Low);
	},
	
	interface Lambda570Y@16*bits == "spi" ()
	{
		#		
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda570Y data...
		#
		Y_High = read 16r0E;
		Y_Low = read 16r0F;
		Lambda570Y@16*bits = (Y_High << 8) | (Y_Low);
	},
	
	interface Lambda570Y@32*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda570Y data...
		#
		Y_Cal_High = read 16r20;
		Y_Cal_Xhigh = read 16r21;
		Y_Cal_Low = read 16r22;
		Y_Cal_Xlow = read 16r23;
		Lambda570Y@32*bits = (Y_Cal_High << 24) |(Y_Cal_Xhigh << 16) |(Y_Cal_Low << 8) | (Y_Cal_Xlow);
	},

	interface Lambda570Y@32*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda570Y data...
		#
		Y_Cal_High = read 16r20;
		Y_Cal_Xhigh = read 16r21;
		Y_Cal_Low = read 16r22;
		Y_Cal_Xlow = read 16r23;
		Lambda570Y@32*bits = (Y_Cal_High << 24) |(Y_Cal_Xhigh << 16) |(Y_Cal_Low << 8) | (Y_Cal_Xlow);
	},

	interface Lambda600O@16*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda600O data...
		#
		O_High = read 16r10;
		O_Low = read 16r11;
		Lambda600O@16*bits = (O_High << 8) | (O_Low);
	},
	
	interface Lambda600O@16*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda600O data...
		#
		O_High = read 16r10;
		O_Low = read 16r11;
		Lambda600O@16*bits = (O_High << 8) | (O_Low);
	},

	interface Lambda600O@32*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda600O data...
		#
		O_Cal_High = read 16r24;
		O_Cal_Xhigh = read 16r25;
		O_Cal_Low = read 16r26;
		O_Cal_Xlow = read 16r27;
		Lambda600O@32*bits = (O_Cal_High << 24) |(O_Cal_Xhigh << 16) |(O_Cal_Low << 8) | (O_Cal_Xlow);
	},

	interface Lambda600O@32*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda600O data...
		#
		O_Cal_High = read 16r24;
		O_Cal_Xhigh = read 16r25;
		O_Cal_Low = read 16r26;
		O_Cal_Xlow = read 16r27;
		Lambda600O@32*bits = (O_Cal_High << 24) |(O_Cal_Xhigh << 16) |(O_Cal_Low << 8) | (O_Cal_Xlow);
	},

	interface Lambda650R@16*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda650R data...
		#
		R_High = read 16r12;
		R_Low = read 16r13;
		Lambda650R@16*bits = (R_High << 8) | (R_Low);
	},
	
	interface Lambda650R@16*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get MSB and LSB of Lambda650R data...
		#
		R_High = read 16r12;
		R_Low = read 16r13;
		Lambda650R@16*bits = (R_High << 8) | (R_Low);
	},

	interface Lambda650R@32*bits == "i2c" (address: "16r49")
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda650R data...
		#
		R_Cal_High = read 16r28;
		R_Cal_Xhigh = read 16r29;
		R_Cal_Low = read 16r2A;
		R_Cal_Xlow = read 16r2B;
		Lambda650R@32*bits = (R_Cal_High << 24) |(R_Cal_Xhigh << 16) |(R_Cal_Low << 8) | (R_Cal_Xlow);
	},

	interface Lambda600O@32*bits == "spi" ()
	{
		#
		#	Start up at normal mode, modify (write value register) if set to other modes ...
		#
		#	Get 4 bytes of Lambda650R data...
		#
		R_Cal_High = read 16r28;
		R_Cal_Xhigh = read 16r29;
		R_Cal_Low = read 16r2A;
		R_Cal_Xlow = read 16r2B;
		Lambda650R@32*bits = (R_Cal_High << 24) |(R_Cal_Xhigh << 16) |(R_Cal_Low << 8) | (R_Cal_Xlow);
	},

	#
	#	Uncertainty/noise model of the device as a function of mean value
	#
	#	Unsure about the function that describes the relationship between the following variables, so leave them as they are.
	#
	uncertainty Temperature == Gaussian(Temperature, kAS7262TemperatureStdev)*g,
	uncertainty Lambda450V == Gaussian(Lambda450V, kAS7262Lambda450VStdev)*g,
	uncertainty Lambda500B == Gaussian(Lambda500B, kAS7262Lambda500BStdev)*g,
	uncertainty Lambda550G == Gaussian(Lambda450V, kAS7262Lambda550GStdev)*g,
	uncertainty Lambda570Y == Gaussian(Lambda570Y, kAS7262Lambda570YStdev)*g,
	uncertainty Lambda600O == Gaussian(Lambda600O, kAS7262Lambda600OStdev)*g,
	uncertainty Lambda650R == Gaussian(Lambda650R, kAS7262Lambda650RStdev)*g,
	
	#
	#	When this token is returned by the device, it denotes invalid sensed value / erasure in communication with device.
	#
	erasuretoken Temperature == kAS7262TemperatureErasureToken,
	erasuretoken Lambda450V == kAS7262Lambda450VErasureToken,
	erasuretoken Lambda500B == kAS7262Lambda500BErasureToken,
	erasuretoken Lambda550G == kAS7262Lambda550GErasureToken,
	erasuretoken Lambda570Y == kAS7262Lambda570YErasureToken,
	erasuretoken Lambda600O == kAS7262Lambda600OErasureToken,
	erasuretoken Lambda650R == kAS7262Lambda650RErasureToken,

	#
	#	Precision settings list for the device. This is a list of (precision, cost) pairs.
	#
	#	The cost is a power or latency (or energy=power*time) cost for accessing values.
	#
	#	Cost has a unit of microwatts.
	#
	#	Could not find the relevant information in data sheet so I left the cost as 0.
	#
	precision Temperature == {
					(8*bits, nil),
				},

	precision Lambda450V == {
					(16*bits, nil),
					(32*bits, nil),
				},

	precision Lambda500B == {
					(16*bits, nil),
					(32*bits, nil),
				},

	precision Lambda550G == {
					(16*bits, nil),
					(32*bits, nil),
				},

	precision Lambda570Y == {
					(16*bits, nil),
					(32*bits, nil),
				},

	precision Lambda600O == {
					(16*bits, nil),
					(32*bits, nil),
				},

	precision Lambda650R == {
					(16*bits, nil),
					(32*bits, nil),
				},

	#
	#	Accuracy settings list for the device. This is a list of (accuracy, cost) pairs.
	#
	#	Accuracy values of device cannot be found.
	#
	accuracy Temperature == {
					(nil, nil),
				},

	accuracy Lambda450V == {
					(nil, nil),
				},

	accuracy Lambda500B == {
					(nil, nil),
				},

	accuracy Lambda550G == {
					(nil, nil),
				},

	accuracy Lambda570Y == {
					(nil, nil),
				},

	accuracy Lambda600O == {
					(nil, nil),
				},

	accuracy Lambda650R == {
					(nil, nil),
				}
}
