#	Description: Simple random acceleration walk in Newton
#
include "NewtonBaseSignals.nt"

walk : invariant(
		x  : distance,
		v  : speed,
		a  : acceleration,
		dt : time) =
{
	x ~ x + v*dt,
	v ~ v + a*dt,
	a ~ a
}

observer : invariant(
		x   : distance,
		v   : speed,
		a   : acceleration,
		dt  : time,
		x_m : distance) =
{
	x_m ~ x	
}
