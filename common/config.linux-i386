AR			= /usr/bin/ar
RANLIB			= /usr/bin/ranlib
HOSTNAME		= `hostname`
HTMLBASEPATH		= /Library/WebServer/Documents/tmp
PLATFORM_DFLAGS		+= -DkNoisyBasePath="\"$(HTMLBASEPATH)/\"" -DkNoisyDotCommand="\"/opt/local/bin/dot\"" -DkNoisyLogoPath="\"http://$(HOSTNAME)/tmp/Noisy-logo.png\"" -DkOrganizationLogoPath="\"http://$(HOSTNAME)/tmp/orange-logo-full.png\"" -DkNoisyCgiFileUrlBase=\""http://$(HOSTNAME)/tmp/\"" -DkNoisyCgiExecutableUrl="\"http://$(HOSTNAME)/cgi-bin/noisycgi-linux\"" -DkNewtonCgiExecutableUrl="\"http://$(HOSTNAME)/cgi-bin/newtoncgi-linux\""
PLATFORM_OPTFLAGS	= -O0
PLATFORM_DBGFLAGS	+= -g
PLATFORM_CFLAGS		+= -DNoisyOsLinux
CGI_BIN			= /Library/WebServer/CGI-Executables/
LINTFLAGS		= -pg
